  <profiles>
    <profile>
      <!--TODO: CUSTOMER DOES NOT KNOW TOKO ????-->
      <id>cae-and-studio-with-es-toko-component</id>
      <dependencyManagement>
        <dependencies>
          <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>lc-toko-bom</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>import</scope>
          </dependency>
        </dependencies>
      </dependencyManagement>
      <build>
        <plugins>
          <plugin>
            <groupId>com.coremedia.maven</groupId>
            <artifactId>coremedia-blueprint-maven-plugin</artifactId>
            <inherited>false</inherited>
            <executions>
              <execution>
                <phase>generate-sources</phase>
                <goals>
                  <goal>update-extensions</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>kitchen</id>
      <!--
       |  Use this profile to develop against the kitchen setup
       -->
      <properties>
        <installation.host>192.168.252.100.xip.io</installation.host>
      </properties>
    </profile>
    <profile>
      <id>joo-unit-tests</id>
      <activation>
        <file>
          <exists>/usr/local/bin/phantomjs</exists>
        </file>
        <property>
          <name>phantomjs.bin</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>net.jangaroo</groupId>
            <artifactId>jangaroo-maven-plugin</artifactId>
            <configuration>
              <skip>false</skip>
              <jooUnitTestExecutionTimeout>30000</jooUnitTestExecutionTimeout>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <!--TODO: WHY IS THIS PROFILE HERE ????-->
      <id>controlroom-memory</id>
      <!--
      this profile replaces the controlroom and the notifications
      persistence layer - make sure to disable the other *-es-* and
      *-elastic-* extensions manually
      -->
      <properties>
        <controlroom.persistence.extension>memory</controlroom.persistence.extension>
        <notification.persistence.extension>memory</notification.persistence.extension>
      </properties>
    </profile>
    <profile>
      <id>deployment-archive</id>
      <!--
       | This profile creates the deployment archive containing the chef setup, the deployment artifacts
       | (webapps, tools and some jars) and the content.
       -->
      <modules>
        <module>deployment</module>
      </modules>
    </profile>
  </profiles>

  <modules>
    <module>modules</module>
    <module>test-data</module>
    <module>deployment</module>
  </modules>

