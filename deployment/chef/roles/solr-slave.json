{
  "name": "solr-slave",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "The role for the solr-slave node",
  "run_list": [
    "role[base]",
    "recipe[blueprint-tomcat::solr]"
  ],
  "override_attributes": {
    "blueprint": {
      "tomcat": {
        "solr": {
          "catalina_properties": {
            "master.enable": false,
            "slave.enable": true
          }
        }
      }
    }
  }
}
