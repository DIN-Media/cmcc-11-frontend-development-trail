<?xml version="1.0" encoding="UTF-8"?>
<local:AbstractCatalogListBase
                xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:local="com.coremedia.ecommerce.studio.components.*"
                xmlns:exml="http://www.jangaroo.net/exml/0.8"
                xmlns="exml:ext.config"
                xmlns:ui="exml:com.coremedia.ui.config">
  <fx:Script><![CDATA[
    public static const xtype:String = "com.coremedia.ecommerce.studio.config.abstractCatalogList";

    private var config:AbstractCatalogList;

    public native function AbstractCatalogList(config:AbstractCatalogList = null);
    ]]></fx:Script>
  <fx:Declarations>
    <!---
     The named drag drop group to which this grid belong to
    -->
    <fx:String id="ddGroup"/>
  </fx:Declarations>

    <local:plugins>
      <ui:BindSelectionPlugin selectedValues="{config.selectedItemsValueExpression}"/>
    </local:plugins>
    <local:selModel>
      <selection_RowModel mode="MULTI"/>
    </local:selModel>
    <local:view>
      <GridView stripeRows="true" trackOver="true" loadMask="true" deferEmptyText="false">
        <plugins>
          <plugin_GridViewDragDrop copy="true" enableDrop="false" ddGroup="{config.ddGroup}" pluginId="dragdrop"/>
        </plugins>
      </GridView>
    </local:view>

</local:AbstractCatalogListBase>
