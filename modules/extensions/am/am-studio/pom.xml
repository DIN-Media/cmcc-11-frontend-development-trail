<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.coremedia.blueprint</groupId>
    <artifactId>am</artifactId>
    <version>1-SNAPSHOT</version>
  </parent>

  <artifactId>am-studio</artifactId>
  <packaging>jangaroo</packaging>

  <properties>
    <coremedia.project.extension.for>studio</coremedia.project.extension.for>
    <sprites.name>${project.artifactId}-icons</sprites.name>
  </properties>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>blueprint-forms</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>blueprint-components</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.toolkit</groupId>
      <artifactId>ui-components</artifactId>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>editor-components</artifactId>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.collaboration</groupId>
      <artifactId>control-room-editor-components</artifactId>
    </dependency>
    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>ext-as</artifactId>
    </dependency>
    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>jangaroo-runtime</artifactId>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src/main/joo</sourceDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>META-INF/resources/joo/${project.artifactId}.module.js</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
        <excludes>
          <exclude>META-INF/resources/joo/${project.artifactId}.module.js</exclude>
        </excludes>
      </resource>
      <resource>
        <directory>target/generated-resources</directory>
      </resource>
    </resources>

    <plugins>
      <!--
        Smartsprites gets the css files from the css/cm-sprites directory and
        summarizes all annotated images together into sprites.
        These are then stored in generated-resources.
        -->
      <plugin>
        <groupId>net.jangaroo</groupId>
        <artifactId>smartsprites-maven-plugin</artifactId>
        <configuration>
          <rootDirPath>src/main/sprites</rootDirPath>
          <outputDirPath>target/generated-resources/META-INF/resources/joo/resources/css/icons</outputDirPath>
        </configuration>
        <executions>
          <execution>
            <id>createSprites</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>createSprites</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!--
      In the generated-resources folder, multiple CSS files will be summarized
      into one file cm-sprites.css. All output files will be deleted.
      TODO: Maybe its is better to outsource all & copy all with ANT in the generated resources folder.
      -->
      <plugin>
        <groupId>org.primefaces.extensions</groupId>
        <artifactId>resources-optimizer-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>optimize</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>optimize</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <compilationLevel>ADVANCED_OPTIMIZATIONS</compilationLevel>
          <warningLevel>VERBOSE</warningLevel>
          <failOnWarning>true</failOnWarning>
          <resourcesSets>
            <resourcesSet>
              <inputDir>target/generated-resources/META-INF/resources/joo/resources/css/icons</inputDir>
              <includes>
                <include>**/*.css</include>
              </includes>
              <aggregations>
                <aggregation>
                  <prependedFile>src/main/prepend/prepend.css</prependedFile>
                  <removeIncluded>true</removeIncluded>
                  <withoutCompress>false</withoutCompress>
                  <outputFile>target/generated-resources/META-INF/resources/joo/resources/css/icons/${sprites.name}.css</outputFile>
                </aggregation>
              </aggregations>
            </resourcesSet>
          </resourcesSets>
        </configuration>
      </plugin>
      <!--
        The dependency-plugin is not compatible with jangaroo.
        So define the used dependencies explicitly.
      -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <configuration>
          <usedDependencies>
            <usedDependency>${project.groupId}:blueprint-components</usedDependency>
            <usedDependency>${project.groupId}:blueprint-forms</usedDependency>
            <usedDependency>com.coremedia.ui.toolkit:ui-components</usedDependency>
            <usedDependency>com.coremedia.ui.sdk:editor-components</usedDependency>
            <usedDependency>com.coremedia.ui.collaboration:control-room-editor-components</usedDependency>
            <usedDependency>net.jangaroo:ext-as</usedDependency>
            <usedDependency>net.jangaroo:jangaroo-runtime</usedDependency>
          </usedDependencies>
        </configuration>
      </plugin>

      <plugin>
        <groupId>net.jangaroo</groupId>
        <artifactId>jangaroo-maven-plugin</artifactId>
        <version>${jangaroo.version}</version> <!-- explicit version for IDEA! -->
        <extensions>false</extensions>
        <configuration>
          <skip>false</skip>
        </configuration>
      </plugin>

      <plugin>
        <groupId>net.jangaroo</groupId>
        <artifactId>exml-maven-plugin</artifactId>
        <version>${jangaroo.version}</version>
        <extensions>true</extensions>
        <configuration>
          <configClassPackage>com.coremedia.blueprint.assets.studio.config</configClassPackage>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
