<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.coremedia.blueprint</groupId>
    <artifactId>am</artifactId>
    <version>1-SNAPSHOT</version>
  </parent>

  <artifactId>am-theme</artifactId>

  <description>Theme "Asset Management Download Portal". Includes webresources and templates.</description>

  <properties>
    <coremedia.project.extension.for>cae</coremedia.project.extension.for>
  </properties>

  <!-- dependencies needed for code-completion in IDEs -->
  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>am-cae</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <!-- basic theme includes all dependencies to spring, freemarker, javascript and coremedia taglibs -->
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>basic-theme</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <!-- activate this plugin for local development to generate webresources for cae-preview-webapp -->
  <profiles>
    <profile>
      <id>development-themes</id>
      <activation>
        <property>
          <name>!skipThemes</name>
        </property>
      </activation>
      <build>
        <plugins>
          <!-- build theme and copy everything to the target folder -->
          <plugin>
            <groupId>com.github.eirslett</groupId>
            <artifactId>frontend-maven-plugin</artifactId>
            <executions>
              <!-- install node, npm and node_modules in local workspace -->
              <execution>
                <id>install node, npm and dependencies</id>
                <goals>
                  <goal>install-node-and-npm</goal>
                  <goal>npm</goal>
                </goals>
              </execution>
              <!-- run grunt build -->
              <execution>
                <id>grunt build</id>
                <goals>
                  <goal>grunt</goal>
                </goals>
                <configuration>
                  <arguments>${cae.themes.grunt.task.build}</arguments>
                </configuration>
              </execution>
              <!-- run grunt test -->
              <execution>
                <id>grunt test</id>
                <goals>
                  <goal>grunt</goal>
                </goals>
                <phase>test</phase>
                <configuration>
                  <arguments>${cae.themes.grunt.task.test}</arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <!-- Provide the resources artifact for the coremedia-webresource-content-maven-plugin. -->
                <id>theme</id>
                <goals>
                  <goal>single</goal>
                </goals>
                <phase>package</phase>
                <configuration>
                  <descriptors>
                    <descriptor>assembly/resources-assembly-descriptor.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
