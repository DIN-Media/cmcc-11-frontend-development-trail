<?xml version="1.0" encoding="UTF-8"?>
<local:UploadProgressContainerBase
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:local="com.coremedia.blueprint.studio.upload.dialog.*"
        xmlns:exml="http://www.jangaroo.net/exml/0.8"
        xmlns="exml:ext.config"
        xmlns:ui="exml:com.coremedia.ui.config">
  <fx:Script><![CDATA[
    import com.coremedia.ui.mixins.OverflowBehaviour;

    public static const xtype:String = "com.coremedia.blueprint.studio.config.upload.uploadProgressContainer";

    public static const PROGRESS_BAR:String = "upload-progress-bar";
    public static const PROGRESS_STATUS_TEXT:String = "progress-status-text";

    private var config:UploadProgressContainer;

    public native function UploadProgressContainer(config:UploadProgressContainer = null);
    ]]></fx:Script>

  <local:layout>
    <layout_HBox align="center"/>
  </local:layout>
  <local:items>
    <ui:ExtendedDisplayField itemId="{PROGRESS_STATUS_TEXT}"
                             value="{config.file.getFile().name}"
                             flex="3"
                             overflowBehaviour="{OverflowBehaviour.ELLIPSIS}"/>
    <ui:StatefulProgressBar itemId="{PROGRESS_BAR}"
                            flex="3"/>
    <Container width="6"/>
  </local:items>

</local:UploadProgressContainerBase>
