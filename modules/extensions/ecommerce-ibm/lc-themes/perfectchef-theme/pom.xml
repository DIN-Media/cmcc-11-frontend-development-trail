<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.coremedia.blueprint</groupId>
    <artifactId>lc-themes</artifactId>
    <version>1-SNAPSHOT</version>
  </parent>

  <artifactId>perfectchef-theme</artifactId>
  <packaging>pom</packaging>

  <properties>
    <coremedia.project.extension.for>cae</coremedia.project.extension.for>
  </properties>

  <!-- dependencies needed for code-completion in IDEs only -->
  <dependencies>
    <!-- cae module includes all dependencies to spring, freemarker, javascript and coremedia taglibs -->
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>lc-cae</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <!-- activate this plugin for local development to generate webresources for cae-preview-webapp -->
  <profiles>
    <profile>
      <id>development-themes</id>
      <activation>
        <property>
          <name>!skipThemes</name>
        </property>
      </activation>
      <build>
        <plugins>
          <!-- build theme and copy everything to the target folder -->
          <plugin>
            <groupId>com.github.eirslett</groupId>
            <artifactId>frontend-maven-plugin</artifactId>
            <configuration>
              <!--
              | you cannot set this property in the root pom, there is no root pom property in multimodule
              | builds in maven
             -->
              <installDirectory>${project.basedir}/../../../../../</installDirectory>
            </configuration>
            <executions>
              <execution>
                <id>build theme</id>
                <goals>
                  <!-- install node -->
                  <goal>install-node-and-npm</goal>
                  <!-- install modules and build theme via postinstall -->
                  <goal>npm</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <artifactId>maven-install-plugin</artifactId>
            <executions>
              <execution>
                <!-- Provide the resources artifact as zip for the theme importer runner. -->
                <id>include-theme-zip</id>
                <goals>
                  <goal>install-file</goal>
                </goals>
                <phase>package</phase>
                <configuration>
                  <file>${project.build.directory}/${project.artifactId}.zip</file>
                  <artifactId>${project.artifactId}</artifactId>
                  <version>${project.version}</version>
                  <packaging>zip</packaging>
                  <classifier>theme</classifier>
                  <pomFile>./pom.xml</pomFile>
                </configuration>
              </execution>
              <execution>
                <id>include-template-jar</id>
                <goals>
                  <goal>install-file</goal>
                </goals>
                <phase>package</phase>
                <configuration>
                  <file>
                    ${project.build.directory}/resources/themes/perfectchef/templates/perfectchef-templates.jar
                  </file>
                  <artifactId>${project.artifactId}</artifactId>
                  <version>${project.version}</version>
                  <packaging>jar</packaging>
                  <pomFile>./pom.xml</pomFile>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
