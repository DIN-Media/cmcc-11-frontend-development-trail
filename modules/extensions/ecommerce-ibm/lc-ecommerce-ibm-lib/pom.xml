  <build>
    <!-- install test-jar so that other modules can extend abstract test classes -->
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>integration-test</id>
      <properties>
        <skip-joo-unit-tests>true</skip-joo-unit-tests>
        <skip-unit-tests>true</skip-unit-tests>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-failsafe-plugin</artifactId>
            <configuration>
              <redirectTestOutputToFile>true</redirectTestOutputToFile>
              <!-- override default security settings (if possible) -->
              <argLine>-Djava.security.properties=${project.build.testOutputDirectory}/java.security</argLine>
              <systemPropertyVariables>
                <betamax.proxyPort>${betamax.proxyPort}</betamax.proxyPort>
              </systemPropertyVariables>
            </configuration>
            <executions>
              <execution>
                <goals>
                  <goal>integration-test</goal>
                  <goal>verify</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>remote-tests</id>
      <properties>
        <skip-joo-unit-tests>true</skip-joo-unit-tests>
        <skip-unit-tests>true</skip-unit-tests>
        <wcs.host/>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-failsafe-plugin</artifactId>
            <configuration>
              <skipTests>${skip-ibm-tests}</skipTests>
              <skipITs>false</skipITs>
              <redirectTestOutputToFile>true</redirectTestOutputToFile>
              <!-- override default security settings (if possible) -->
              <argLine>-Djava.security.properties=${project.build.testOutputDirectory}/java.security</argLine>
              <systemPropertyVariables>
                <betamax.proxyPort>${betamax.proxyPort}</betamax.proxyPort>
                <betamax.ignoreHosts>*</betamax.ignoreHosts>
                <livecontext.ibm.wcs.host>${wcs.host}</livecontext.ibm.wcs.host>
                <livecontext.ibm.wcs.url>http://${wcs.host}</livecontext.ibm.wcs.url>
                <livecontext.ibm.wcs.secureUrl>https://${wcs.host}</livecontext.ibm.wcs.secureUrl>
                <livecontext.ibm.wcs.version>8.0</livecontext.ibm.wcs.version>
                <livecontext.apache.wcs.url>http://shop-preview-production-helios.${wcs.host}</livecontext.apache.wcs.url>
              </systemPropertyVariables>
            </configuration>
            <executions>
              <execution>
                <goals>
                  <goal>integration-test</goal>
                  <goal>verify</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
