    <javaScript>vendor/jquery.cycle2.swipe.js</javaScript>
    <javaScript>vendor/jquery.cycle2.carousel.patched.js</javaScript>
    <javaScript>vendor/jquery.elevatezoom.js</javaScript>
    <javaScript>vendor/jquery.magnific-popup.js</javaScript>
    <javaScript>vendor/mediaelement-and-player.js</javaScript>
