<?xml version="1.0" encoding="UTF-8"?>
<themeDefinition modelVersion="1">

  <name>aurora</name>
  <description>The Aurora Theme provides a modern, appealing, highly visual theme. It demonstrates the capability
    to build localizable, multi-national, experience-driven e-Commerce websites. Integration with IBM WebSphere Commerce
    ships out of the box.

    Based on a fully responsive, mobile-first design paradigm, it leverages the Bootstrap grid framework. It
    scales from mobile via tablet to desktop viewport sizes and uses the CoreMedia Adaptive and Responsive Image
    Framework to dynamically deliver the right image sizes in the right aspect ratios and crops for each viewport.

    This theme integrates the fragment-based approach seamless into Aurora B2C and B2B store examples.
  </description>
  <thumbnail>img/theme-preview.jpg</thumbnail>

  <!-- To avoid conflicts with IBM WCS all js files should be loaded in head -->
  <javaScriptLibraries>
    <javaScript inHead="true" disableCompress="true">vendor/jquery.min.js</javaScript>
    <javaScript inHead="true" disableCompress="true">vendor/bootstrap/bootstrap.min.js</javaScript>
    <javaScript inHead="true">vendor/bootstrap/carousel-swipe.js</javaScript>
    <javaScript inHead="true">vendor/imagesloaded/imagesloaded.pkgd.js</javaScript>
    <javaScript inHead="true">vendor/jquery.cycle2.js</javaScript>
    <javaScript inHead="true">vendor/jquery.cycle2.swipe.js</javaScript>
    <javaScript inHead="true">vendor/jquery.cycle2.carousel.patched.js</javaScript>
    <javaScript inHead="true">vendor/jquery.elevatezoom.js</javaScript>
    <javaScript inHead="true">vendor/jquery.magnific-popup.js</javaScript>
    <javaScript inHead="true">vendor/mediaelement-and-player.js</javaScript>
  </javaScriptLibraries>

  <javaScripts>
    <!-- CoreMedia Basic JavaScripts -->
    <javaScript inHead="true">js/coremedia.blueprint.noconflict.js</javaScript>
    <javaScript inHead="true">js/jquery.coremedia.utils.js</javaScript>
    <javaScript inHead="true">js/jquery.coremedia.smartresize.js</javaScript>
    <javaScript inHead="true">js/jquery.coremedia.responsiveimages.js</javaScript>
    <javaScript inHead="true">js/jquery.coremedia.spinner.js</javaScript>
    <javaScript inHead="true">js/jquery.coremedia.equalheight.js</javaScript>
    <javaScript inHead="true" disableCompress="true">js/lib/logger.js</javaScript>
    <javaScript inHead="true">js/coremedia.blueprint.nodeDecorationService.js</javaScript>
    <javaScript inHead="true">js/coremedia.blueprint.deviceDetector.js</javaScript>
    <javaScript inHead="true">js/coremedia.blueprint.hashBasedFragment.js</javaScript>
    <javaScript inHead="true">js/coremedia.blueprint.basic.js</javaScript>
    <javaScript inHead="true">js/jquery.coremedia.carousel.js</javaScript>
    <javaScript inHead="true">js/jquery.coremedia.videopopup.js</javaScript>
    <!-- QuickInfo -->
    <javaScript inHead="true">js/coremedia.blueprint.quickinfo.js</javaScript>
    <javaScript inHead="true">js/coremedia.blueprint.quickinfo.init.js</javaScript>
    <!-- ImageMaps -->
    <javaScript inHead="true">js/coremedia.blueprint.imagemap.js</javaScript>
    <javaScript inHead="true">js/coremedia.blueprint.imagemap.init.js</javaScript>
    <!-- Elastic Social JavaScripts -->
    <javaScript inHead="true">js/coremedia.blueprint.es.timezone.js</javaScript>
    <javaScript inHead="true">js/coremedia.blueprint.es.js</javaScript>
    <!-- CoreMedia Aurora-->
    <javaScript inHead="true">js/coremedia.blueprint.livecontext.deviceSettings.js</javaScript>
    <javaScript inHead="true">js/coremedia.blueprint.livecontext.js</javaScript>
  </javaScripts>

  <styleSheets>
    <css>css/aurora.css</css>
  </styleSheets>

  <templateSets>
    <templateSet>templates/aurora-templates.jar</templateSet>
    <templateSet>templates/bricks-templates.jar</templateSet>
  </templateSets>

  <resourceBundles>
    <resourceBundle>l10n/Bundle_en.properties</resourceBundle>
    <resourceBundle>l10n/Preview_en.properties</resourceBundle>
    <resourceBundle>l10n/ElasticSocial_en.properties</resourceBundle>
    <resourceBundle>l10n/Livecontext_en.properties</resourceBundle>
  </resourceBundles>

</themeDefinition>
