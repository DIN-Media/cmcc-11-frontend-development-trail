<?xml version="1.0" encoding="UTF-8"?>
<themeDefinition modelVersion="1">

  <name>calista</name>
  <description>Calista Minimal Theme</description>
  <thumbnail>img/theme.jpg</thumbnail>

  <javaScripts>
    <!-- To avoid conflicts with IBM WCS all js files should be loaded in head -->
    <javaScript inHead="true" disableCompress="true">js/calista.js</javaScript>
  </javaScripts>

  <styleSheets>
    <css disableCompress="true">css/calista.css</css>
  </styleSheets>

  <templateSets>
    <templateSet>templates/calista-templates.jar</templateSet>
    <templateSet>templates/bricks-templates.jar</templateSet>
  </templateSets>

  <resourceBundles>
    <resourceBundle>l10n/Bootstrap_en.properties</resourceBundle>
    <resourceBundle>l10n/CTA_en.properties</resourceBundle>
    <resourceBundle>l10n/Livecontext_en.properties</resourceBundle>
    <resourceBundle>l10n/Preview_en.properties</resourceBundle>
    <resourceBundle>l10n/Video_en.properties</resourceBundle>
    <resourceBundle>l10n/Calista_en.properties</resourceBundle>
  </resourceBundles>

</themeDefinition>
