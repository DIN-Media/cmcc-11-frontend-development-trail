<?xml version="1.0" encoding="UTF-8"?>
<themeDefinition modelVersion="1">

  <name>corporate</name>
  <description>The Corporate Theme provides a modern, appealing, highly visual theme. It demonstrates the capability to
    build localizable, multi-national, non-commerce websites.

    Based on a fully responsive, mobile-first design paradigm, it leverages the Twitter Bootstrap Grid
    and Design framework for easy customization and adaptation by frontend developers. It scales from mobile via tablet
    to desktop viewport sizes and uses the CoreMedia Adaptive and Responsive Image Framework to dynamically deliver the
    right image sizes in the right aspect ratios and crops. The responsive navigation visualizes 3 levels, even though
    the navigation structure can be arbitrary deeply nested. The floating header and the footer can be configured and
    re-ordered in content settings.
  </description>
  <thumbnail>img/theme-preview.jpg</thumbnail>

  <javaScriptLibraries>
    <javaScript disableCompress="true">vendor/jquery.min.js</javaScript>
    <javaScript disableCompress="true">vendor/bootstrap/bootstrap.min.js</javaScript>
    <javaScript>vendor/bootstrap/carousel-swipe.js</javaScript>
    <javaScript>vendor/imagesloaded/imagesloaded.pkgd.js</javaScript>
    <javaScript>vendor/jquery.magnific-popup.js</javaScript>
    <javaScript>vendor/svg4everybody/dist/svg4everybody.js</javaScript>
  </javaScriptLibraries>

  <javaScripts>
    <!-- CoreMedia Basic JavaScripts -->
    <javaScript>js/jquery.coremedia.utils.js</javaScript>
    <javaScript disableCompress="true">js/lib/logger.js</javaScript>
    <javaScript>js/jquery.coremedia.smartresize.js</javaScript>
    <javaScript>js/jquery.coremedia.responsiveimages.js</javaScript>
    <javaScript>js/jquery.coremedia.spinner.js</javaScript>
    <javaScript>js/coremedia.blueprint.nodeDecorationService.js</javaScript>
    <javaScript>js/jquery.coremedia.carousel.js</javaScript>
    <javaScript>js/jquery.coremedia.videopopup.js</javaScript>
    <javaScript>js/coremedia.blueprint.hashBasedFragment.js</javaScript>
    <!-- Quick Info -->
    <javaScript>js/coremedia.blueprint.quickinfo.js</javaScript>
    <javaScript>js/coremedia.blueprint.quickinfo.init.js</javaScript>
    <!-- Image Maps -->
    <javaScript>js/coremedia.blueprint.imagemap.js</javaScript>
    <javaScript>js/coremedia.blueprint.imagemap.init.js</javaScript>
    <!-- Elastic Social JavaScripts -->
    <javaScript>js/coremedia.blueprint.es.timezone.js</javaScript>
    <javaScript>js/coremedia.blueprint.es.js</javaScript>
    <javaScript>js/coremedia.blueprint.basic.js</javaScript>
    <!-- Asset Managment Download Portal -->
    <javaScript>js/coremedia.blueprint.am.downloadCollection.js</javaScript>
    <javaScript>js/coremedia.blueprint.am.downloadCollection.init.js</javaScript>
    <!-- CoreMedia Corporate JavaScripts -->
    <javaScript>js/coremedia.blueprint.corporate.js</javaScript>
  </javaScripts>

  <styleSheets>
    <css>css/corporate.css</css>
  </styleSheets>

  <templateSets>
    <templateSet>templates/corporate-templates.jar</templateSet>
    <templateSet>templates/bricks-templates.jar</templateSet>
  </templateSets>

  <resourceBundles>
    <resourceBundle>l10n/Bundle_en.properties</resourceBundle>
    <resourceBundle>l10n/Preview_en.properties</resourceBundle>
    <resourceBundle>l10n/ElasticSocial_en.properties</resourceBundle>
    <resourceBundle>l10n/AssetManagement_en.properties</resourceBundle>
    <resourceBundle>l10n/Corporate_en.properties</resourceBundle>
  </resourceBundles>

</themeDefinition>
