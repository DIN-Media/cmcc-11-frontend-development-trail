{
  "name": "@coremedia/frontend",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "test": "cross-var lerna run test --npm-client=\"$npm_execpath\"",
    "build": "cross-var lerna run build --npm-client=\"$npm_execpath\"",
    "create-theme": "node ./lib/tools/cm-cli/bin/cm-cli.js create-theme",
    "apidoc": "cross-var lerna run apidoc --npm-client=\"$npm_execpath\"",
    "lerna": "cross-var lerna --npm-client=\"$npm_execpath\""
  },
  "workspaces": [
    "lib/bricks/*",
    "lib/js/*",
    "lib/sass/*",
    "lib/tools/*",
    "themes/*"
  ],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "lerna": "2.7.1",
    "cross-var": "1.1.0"
  },
  "coremedia": {
    "type": "workspace"
  }
}
