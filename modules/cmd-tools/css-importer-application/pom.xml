<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.coremedia.blueprint</groupId>
    <artifactId>cmd-tools</artifactId>
    <version>1-SNAPSHOT</version>
  </parent>

  <artifactId>css-importer-application</artifactId>
  <packaging>coremedia-application</packaging>

  <properties>
    <!--
   | Semicolon separated list of folders for the inbox of the web resources importer. Import following themes by default:
   | basic, corporate, perfectchef, aurora and the extensions elastic social (es and lc-es)
   -->
    <blueprint.rootdir>${project.basedir}/../../..</blueprint.rootdir>
    <css.importer.inbox.cae>${blueprint.rootdir}/modules/cae/cae-themes/basic-theme/target/resources/themes</css.importer.inbox.cae>
    <css.importer.inbox.corporate>${blueprint.rootdir}/modules/extensions/corporate/corporate-theme/target/resources/themes</css.importer.inbox.corporate>
    <css.importer.inbox.es>${blueprint.rootdir}/modules/extensions/es/es-theme/target/resources/themes</css.importer.inbox.es>
    <css.importer.inbox.aurora>${blueprint.rootdir}/modules/extensions/ecommerce-ibm/lc-themes/aurora-theme/target/resources/themes</css.importer.inbox.aurora>
    <css.importer.inbox.pc>${blueprint.rootdir}/modules/extensions/ecommerce-ibm/lc-themes/perfectchef-theme/target/resources/themes</css.importer.inbox.pc>
    <css.importer.inbox>${css.importer.inbox.cae};${css.importer.inbox.corporate};${css.importer.inbox.es};${css.importer.inbox.aurora};${css.importer.inbox.pc}</css.importer.inbox>

  </properties>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>css-importer-lib</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>com.coremedia.cms</groupId>
      <artifactId>application-runtime</artifactId>
      <type>coremedia-application</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>com.coremedia.cms</groupId>
      <artifactId>application-runtime</artifactId>
      <type>pom</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>com.coremedia.cms</groupId>
      <artifactId>cap-importer</artifactId>
      <scope>runtime</scope>
    </dependency>
  </dependencies>

  <build>
    <finalName>css-importer</finalName>
  </build>

</project>
