<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

  <import resource="classpath:com/coremedia/cap/common/uapi-services.xml"/>

  <bean id="disableCroppingsStructAdapter" class="com.coremedia.rest.cap.content.convert.DisableCroppingsStructAdapter">
    <property name="contentType" value="CMPicture"/>
    <property name="disableCroppingPropertyName" value="disableCropping"/>
    <property name="connection" ref="connection"/>
    <property name="property" value="localSettings"/>
  </bean>

</beans>
