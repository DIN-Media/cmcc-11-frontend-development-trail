<?xml version="1.0" encoding="UTF-8"?>
<local:SkinTemplate
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:exml="http://www.jangaroo.net/exml/0.8"
        xmlns="exml:ext.config"
        xmlns:ui="exml:com.coremedia.ui.config"
        xmlns:skins="com.coremedia.blueprint.studio.styleguide.tabs.skins.*"
        title="Comboboxes"
        xmlns:local="com.coremedia.blueprint.studio.styleguide.templates.*">
  <fx:Metadata>
    [ResourceBundle('com.coremedia.icons.CoreIcons')]
  </fx:Metadata>
  <fx:Script><![CDATA[
    import com.coremedia.blueprint.studio.styleguide.tabs.skins.SkinsHelper;
    import com.coremedia.ui.data.ValueExpressionFactory;
    import com.coremedia.ui.layouts.BEMLayouts;

    private var config:IconDisplayFieldTemplate;

    public native function IconDisplayFieldTemplate(config:IconDisplayFieldTemplate = null);
    ]]></fx:Script>

  <local:plugins>
    <ui:BindComponentsPlugin
            valueExpression="{ValueExpressionFactory.createFromValue(config.skinEnum.getSkin())}">
      <ui:template>
        <skins:SkinDescription skinEnum="{config.skinEnum}">
          <skins:example>
            <Container width="100%">
              <layout>
                <layout_HBox pack="start"
                             align="middle"/>
              </layout>
              <items>
                <Container ui="{SkinsHelper.getContainerUiForSkinGroup(config.skinGroup)}">
                  <items>
                    <ui:IconDisplayField ui="{config.skinEnum.getSkin()}"
                                         iconCls="{resourceManager.getString('com.coremedia.icons.CoreIcons', 'help')}"
                                         scale="small"/>
                  </items>
                </Container>
                <Container ui="{SkinsHelper.getContainerUiForSkinGroup(config.skinGroup)}">
                  <items>
                    <ui:IconDisplayField ui="{config.skinEnum.getSkin()}"
                                         iconCls="{resourceManager.getString('com.coremedia.icons.CoreIcons', 'help')}"
                                         scale="medium"/>
                  </items>
                </Container>
                <Container ui="{SkinsHelper.getContainerUiForSkinGroup(config.skinGroup)}">
                  <items>
                    <ui:IconDisplayField ui="{config.skinEnum.getSkin()}"
                                         iconCls="{resourceManager.getString('com.coremedia.icons.CoreIcons', 'help')}"
                                         scale="large"/>
                  </items>
                </Container>
              </items>
              <plugins>
                <ui:BEMPlugin block="{BEMLayouts.HORIZONTAL_SPACING_BLOCK}"
                              defaultElement="{BEMLayouts.HORIZONTAL_SPACING_ELEMENT_ITEM}"/>
              </plugins>
            </Container>
          </skins:example>
        </skins:SkinDescription>
      </ui:template>
    </ui:BindComponentsPlugin>
  </local:plugins>
  <local:defaults>
    <Panel margin="10 0"/>
  </local:defaults>
</local:SkinTemplate>
