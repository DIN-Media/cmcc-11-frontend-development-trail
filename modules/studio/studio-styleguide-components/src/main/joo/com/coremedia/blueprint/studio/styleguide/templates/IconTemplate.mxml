<?xml version="1.0" encoding="UTF-8"?>
<Container
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:exml="http://www.jangaroo.net/exml/0.8"
        xmlns="exml:ext.config">
  <fx:Script><![CDATA[
    import com.coremedia.blueprint.studio.styleguide.StyleguideSkin;

    private var config:IconTemplate;
    public var iconProperties:Object;
    public var iconId:String;
    public var buttonScale:String;

    public native function IconTemplate(config:IconTemplate = null);
    ]]></fx:Script>

  <items>
    <Button ui="{StyleguideSkin.BUTTON_ICON}"
            scale="{config.buttonScale}"
            iconCls="{config.iconProperties[config.iconId]}" />
    <DisplayField value="{config.iconId}" />
  </items>
  <defaults>
    <Component margin="auto" />
  </defaults>

</Container>
