<?xml version="1.0" encoding="UTF-8"?>
<local:SkinTemplate
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:exml="http://www.jangaroo.net/exml/0.8"
        xmlns="exml:ext.config"
        xmlns:ui="exml:com.coremedia.ui.config" xmlns:skins="com.coremedia.blueprint.studio.styleguide.tabs.skins.*"
        title="Menus"
        xmlns:local="com.coremedia.blueprint.studio.styleguide.templates.*">
  <fx:Metadata>
    [ResourceBundle('com.coremedia.icons.CoreIcons')]
  </fx:Metadata>
  <fx:Script><![CDATA[
    import com.coremedia.ui.data.ValueExpressionFactory;

    import ext.Ext;

    private var config:MenusTemplate;

    public native function MenusTemplate(config:MenusTemplate = null);
    ]]></fx:Script>

  <local:plugins>
    <ui:BindComponentsPlugin
            valueExpression="{ValueExpressionFactory.createFromValue(config.skinEnum.getSkin())}">
      <ui:template>
        <skins:SkinDescription skinEnum="{config.skinEnum}">
          <skins:example>
            <Menu ui="{config.skinEnum.getSkin()}"
                  width="100px"
                  floating="false"
                  showSeparator="true"
                  renderTo="{Ext.getBody()}">
              <items>
                <MenuItem text="Configure"
                          iconCls="{resourceManager.getString('com.coremedia.icons.CoreIcons', 'create_rule')}"/>
                <MenuItem text="Cut"
                          iconCls="{resourceManager.getString('com.coremedia.icons.CoreIcons', 'cut')}"/>
              </items>
            </Menu>
          </skins:example>
        </skins:SkinDescription>
      </ui:template>
    </ui:BindComponentsPlugin>
    <ui:AddItemsPlugin>
      <ui:items>
        <Button text="Menu Button: Plain Menu Items"
                margin="0 3 0 0">
          <menu>
            <Menu ui="{config.skinEnum.getSkin()}"
                  plain="true">
              <items>
                <MenuItem text="Home"
                          iconCls="{resourceManager.getString('com.coremedia.icons.CoreIcons', 'home')}"/>
                <MenuItem text="Open in Browser"
                          iconCls="{resourceManager.getString('com.coremedia.icons.CoreIcons', 'open_in_browser')}"/>
              </items>
            </Menu>
          </menu>
        </Button>
        <SplitButton text="Menu Split Button: Separated menu items"
                     margin="0 0 0 3">
          <menu>
            <Menu ui="{config.skinEnum.getSkin()}"
                  plain="false"
                  showSeparator="true">
              <items>
                <MenuItem text="Home"
                          iconCls="{resourceManager.getString('com.coremedia.icons.CoreIcons', 'home')}"/>
                <MenuItem text="Open in Browser"
                          iconCls="{resourceManager.getString('com.coremedia.icons.CoreIcons', 'open_in_browser')}"/>
              </items>
            </Menu>
          </menu>
        </SplitButton>
      </ui:items>
    </ui:AddItemsPlugin>
  </local:plugins>

  <local:defaults>
    <Panel margin="10 0"/>
  </local:defaults>
</local:SkinTemplate>
