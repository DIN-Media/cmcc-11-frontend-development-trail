<?xml version="1.0" encoding="UTF-8"?>
<local:StyleguideBase xmlns:fx="http://ns.adobe.com/mxml/2009"
                      xmlns:exml="http://www.jangaroo.net/exml/0.8"
                      xmlns="exml:ext.config"
                      xmlns:local="com.coremedia.blueprint.studio.styleguide.*"
                      xmlns:documentation="com.coremedia.blueprint.studio.styleguide.tabs.documentation.*"
                      xmlns:skins="com.coremedia.blueprint.studio.styleguide.tabs.skins.*"
                      xmlns:icons="com.coremedia.blueprint.studio.styleguide.tabs.icons.*">
  <fx:Metadata>
    [ResourceBundle('com.coremedia.icons.CoreIcons')]
  </fx:Metadata>
  <fx:Script><![CDATA[
    public static const MENU_ITEM_ID:String = "sg-menu-item-id";
    private var config:Styleguide;

    public native function Styleguide(config:Styleguide = null);
    ]]></fx:Script>

  <local:layout>
    <layout_Fit/>
  </local:layout>
  <local:items>
    <!-- MENU is created via the Tabs -->
    <TabPanel itemId="{MENU_ITEM_ID}"
              activeTab="2"
              tabBarHeaderPosition="2"
              title="Coremedia Living Styleguide"
              iconCls="{resourceManager.getString('com.coremedia.icons.CoreIcons', 'coremedia')}"
              ui="{StyleguideSkin.TAB_PANEL_DEFAULT}">
      <items>

        <!-- DOCUMENTATION PANEL TAB-->
        <documentation:DocumentationPanel/>

        <!-- ICONS TAB -->
        <icons:IconsPanel/>

        <!-- SKINS TAB -->
        <skins:SkinsPanel/>
      </items>
    </TabPanel>
  </local:items>
</local:StyleguideBase>
