<?xml version="1.0" encoding="UTF-8"?>
<editor:SearchFiltersBase xmlns:fx="http://ns.adobe.com/mxml/2009"
                          xmlns:editor="exml:com.coremedia.cms.editor.sdk.config"
                          xmlns:exml="http://www.jangaroo.net/exml/0.8"
                          xmlns:taxonomy="exml:com.coremedia.blueprint.studio.config.taxonomy"
                          xmlns:am="exml:com.coremedia.blueprint.assets.studio.config"
                          xmlns="exml:ext.config"
                          xmlns:ui="com.coremedia.ui.plugins.*"
                          ui="{ContainerSkin.GRID_200}">
  <fx:Metadata>[PublicApi]</fx:Metadata>
  <fx:Script><![CDATA[
    import com.coremedia.blueprint.assets.studio.AssetConstants;
    import com.coremedia.blueprint.assets.studio.AssetManagementConfigurationUtil;
    import com.coremedia.ui.bem.SpacingBEMEntities;
    import com.coremedia.ui.skins.ContainerSkin;

    import mx.resources.ResourceManager;

    public static const xtype:String = "com.coremedia.blueprint.assets.studio.config.assetSearchFilters";

    public static const ITEM_ID:String = "assetSearchFilter";

    private var config:AssetSearchFilters;

    public native function AssetSearchFilters(config:AssetSearchFilters = null);
    ]]></fx:Script>

  <editor:items>
    <editor:StatusFilterPanel/>
    <editor:LastEditedFilterPanel/>
    <taxonomy:TaxonomyFilterPanel taxonomyId="Subject"
                                  filterId="Subject"
                                  propertyName="subjecttaxonomy"/>
    <taxonomy:TaxonomyFilterPanel taxonomyId="Location"
                                  filterId="Location"
                                  propertyName="locationtaxonomy"/>
    <taxonomy:TaxonomyFilterPanel itemId="assetDownloadPortal"
                                  filterId="{AssetConstants.ASSET_TAXONOMY_ID}"
                                  taxonomyId="{AssetConstants.ASSET_TAXONOMY_ID}"
                                  propertyName="{AssetConstants.PROPERTY_ASSET_ASSETTAXONOMY_SEARCH}"/>
    <editor:RelativeDateFilterPanel dateFieldName="modificationdate"/>
    <editor:RelativeDateFilterPanel dateFieldName="publicationdate"/>
    <am:StringListCheckboxFilterPanel filterId="rightsChannels"
                                      propertyName="{AssetConstants.PROPERTY_ASSET_METADATA_CHANNELS}"
                                      title="{ResourceManager.getInstance().getString('com.coremedia.blueprint.assets.studio.AMStudioPlugin', 'Filter_RightsChannels_text')}"
                                      availableValuesValueExpression="{AssetManagementConfigurationUtil.getConfiguredRightsChannelsValueExpression()}"/>
    <am:StringListCheckboxFilterPanel filterId="rightsRegions"
                                      propertyName="{AssetConstants.PROPERTY_ASSET_METADATA_REGIONS}"
                                      title="{ResourceManager.getInstance().getString('com.coremedia.blueprint.assets.studio.AMStudioPlugin', 'Filter_RightsRegions_text')}"
                                      availableValuesValueExpression="{AssetManagementConfigurationUtil.getConfiguredRightsRegionsValueExpression()}"/>
    <am:ExpirationDateFilterPanel/>
  </editor:items>
  <editor:layout>
    <layout_Anchor/>
  </editor:layout>
  <editor:plugins>
    <ui:VerticalSpacingPlugin modifier="{SpacingBEMEntities.VERTICAL_SPACING_MODIFIER_200}"/>
  </editor:plugins>
</editor:SearchFiltersBase>
