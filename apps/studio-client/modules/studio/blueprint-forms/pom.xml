<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.coremedia.blueprint</groupId>
    <artifactId>studio-client.studio</artifactId>
    <version>1-SNAPSHOT</version>
  </parent>

  <artifactId>blueprint-forms</artifactId>
  <packaging>swc</packaging>

  <description>CoreMedia Studio Forms</description>

  <dependencies>
    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>jangaroo-browser</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>cap-rest-client</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.toolkit</groupId>
      <artifactId>client-core</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.toolkit</groupId>
      <artifactId>client-core-impl</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.cms</groupId>
      <artifactId>studio-client.link-list-models</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.cms</groupId>
      <artifactId>studio-client.cap-base-components</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.cms</groupId>
      <artifactId>studio-client.multi-site-models</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.cms</groupId>
      <artifactId>studio-client.content-link-list-models</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.cms</groupId>
      <artifactId>studio-client.errors-validation-components</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.blueprint.base</groupId>
      <artifactId>bpbase-studio-components</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.cms</groupId>
      <artifactId>studio-client.library-services-api</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.cms</groupId>
      <artifactId>studio-client.cap-base-models</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.cms</groupId>
      <artifactId>studio-client.content-link-list-components</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.blueprint.base</groupId>
      <artifactId>bpbase-pagegrid-studio-plugin</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.toolkit</groupId>
      <artifactId>core-icons</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.toolkit</groupId>
      <artifactId>ui-components</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>editor-components</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>image-editor-components</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>image-map-editor-components</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>ext-as</artifactId>
      <type>swc</type>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>src/main/sencha</directory>
        <targetPath>../packages/${project.groupId}__${project.artifactId}</targetPath>
        <excludes>
          <exclude>sass/var/**</exclude>
          <exclude>sass/src/**</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>net.jangaroo</groupId>
        <artifactId>jangaroo-maven-plugin</artifactId>
        <extensions>true</extensions>
        <version>${jangaroo.version}</version>
        <configuration>
          <extNamespace>com.coremedia.blueprint.studio</extNamespace>
          <publicApiViolations>warn</publicApiViolations>
          <namespaces>
            <namespace>
              <uri>exml:com.coremedia.blueprint.studio.config</uri>
            </namespace>
          </namespaces>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
