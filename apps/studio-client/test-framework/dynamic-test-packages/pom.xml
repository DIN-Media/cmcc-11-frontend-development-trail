<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <groupId>com.coremedia.blueprint.internal</groupId>
    <artifactId>studio-client-test-framework.blueprint-parent</artifactId>
    <version>1-SNAPSHOT</version>
    <relativePath>../blueprint-parent/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>dynamic-test-packages</artifactId>
  <packaging>pom</packaging>

  <properties>
    <jangaroo.version>4.0.69</jangaroo.version>
    <jangaroo.libs.version>4.0.49</jangaroo.libs.version>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>net.jangaroo</groupId>
          <artifactId>jangaroo-maven-plugin</artifactId>
          <version>${jangaroo.version}</version>
        </plugin>
        <!-- take care that NOT the buggy version 2.5 of maven-clean-plugin is used, which erases symbolic-linked folders -->
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-clean-plugin</artifactId>
          <version>3.0.0</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>net.jangaroo</groupId>
        <artifactId>jangaroo-libs-bom</artifactId>
        <version>${jangaroo.libs.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <modules>
    <module>custom-forms-plugin</module>
    <module>dashboards-plugin</module>
    <module>dynamic-test-studio-plugin</module>
    <module>enable-disapprove-plugin</module>
    <module>hash-params-plugin</module>
    <module>library-actions-plugin</module>
    <module>mock-requests-plugin</module>
    <module>plugin-requirements-plugin</module>
    <module>preview-plugin</module>
    <module>studio-test-app-overlays</module>
  </modules>


</project>
