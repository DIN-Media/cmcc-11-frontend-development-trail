<?xml version="1.0" encoding="UTF-8"?>
<ui:AddItemsPlugin
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:exml="http://www.jangaroo.net/exml/0.8"
        xmlns:ui="exml:com.coremedia.ui.config"
        xmlns:editor="exml:com.coremedia.cms.editor.sdk.config"
        xmlns="exml:ext.config">
  <fx:Script><![CDATA[
    import com.coremedia.cms.editor.sdk.collectionview.*;

    private var componentConfig:CollectionSearchContextMenu;

    // called by generated constructor code
    //noinspection JSUnusedLocalSymbols
    private function __initialize__(config:ExtendLibrarySearchContextMenuItemsPlugin):void {
      componentConfig = CollectionSearchContextMenu(config.cmp.initialConfig);
    }

    //noinspection JSUnusedLocalSymbols
    private var config:ExtendLibrarySearchContextMenuItemsPlugin;

    public native function ExtendLibrarySearchContextMenuItemsPlugin(config:ExtendLibrarySearchContextMenuItemsPlugin = null);
    ]]></fx:Script>

  <ui:items>
    <MenuItem itemId="checkIn">
      <baseAction>
        <editor:CheckInAction contentValueExpression="{componentConfig.selectedItemsValueExpression}"/>
      </baseAction>
    </MenuItem>
    <MenuItem itemId="revert">
      <baseAction>
        <editor:RevertAction contentValueExpression="{componentConfig.selectedItemsValueExpression}"/>
      </baseAction>
    </MenuItem>
  </ui:items>

</ui:AddItemsPlugin>
