<?xml version="1.0" encoding="UTF-8"?>
<editor:DocumentTabPanel
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:exml="http://www.jangaroo.net/exml/0.8"
        xmlns="exml:ext.config"
        xmlns:editor="exml:com.coremedia.cms.editor.sdk.config">
  <fx:Script><![CDATA[
    public static const xtype:String = "acme.config.amPictureAssetForm";

    private var config:AMPictureAssetForm;

    public native function AMPictureAssetForm(config:AMPictureAssetForm = null);
    ]]></fx:Script>

  <editor:items>
    <editor:DocumentForm title="theForm">
      <editor:items>
        <editor:PropertyFieldGroup title="product IDs"
                                   itemId="productIds">
          <editor:items>
            <editor:StringListPropertyField bindTo="{config.bindTo}" propertyName="metadata.productIds"/>
          </editor:items>
        </editor:PropertyFieldGroup>
      </editor:items>
    </editor:DocumentForm>
  </editor:items>

</editor:DocumentTabPanel>
