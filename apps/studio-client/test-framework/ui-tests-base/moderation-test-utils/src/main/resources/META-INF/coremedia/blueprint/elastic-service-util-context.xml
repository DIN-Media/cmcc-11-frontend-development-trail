<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

  <import resource="classpath:/META-INF/coremedia/es-common-idschemes.xml"/>
  <import resource="classpath:/META-INF/coremedia/es-common-mail.xml"/>
  <import resource="classpath:/META-INF/coremedia/es-common-search.xml"/>

  <context:component-scan base-package="com.coremedia.elastic"/>
  <context:component-scan base-package="com.coremedia.blueprint.base.elastic">
    <context:exclude-filter type="regex" expression=".*\..+MailListener"/>
  </context:component-scan>

  <!-- Fine grained component-scans for Elastic in order to prevent beans being instantiated which are
  not required for testing purpose. -->

  <context:component-scan base-package="com.coremedia.uitesting"/>

  <context:component-scan base-package="com.coremedia.blueprint.uitesting.elastic.service.util;"
                          scope-resolver="org.springframework.context.annotation.Jsr330ScopeMetadataResolver"/>

  <context:component-scan base-package="com.coremedia.configuration.cms"/>

</beans>
